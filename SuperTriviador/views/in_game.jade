extends layout

block content
  aside.right-side
    // Contenido principal
    section.content
      div.row
        section.col-lg-7.connectedSortable
          div.box
            div.box-header
              h3.box-title #{game_name}
            div.box-body.no-padding
              table.table.table.striped
                tr
                  th Tipo de Partida
                  td #{game_type}
                  th(style='width: 40%;') 
                tr
                  th NÃºmero de Preguntas
                  td #{game_numberquestions}
                  th
                tr
                  th Tiempo por Pregunta
                  td #{game_timeanswer}
                  th
                tr
                  th Temas
                  td(colspan='2')
                    each tema in game_temas
                      p #{tema}
    section.content
      div.row
        section.col-lg-7.connectedSortable#sec_info_game
          div.box.box-success
            div.col-lg-7
              button.btn.btn-lg.btn-default#btn-start Iniciar Juego
        // Fin section
        section.col-lg-7.connectedSortable#sec_question_game
          div.box.box-success
            div.box-header
              h3.box-title#question
            hr
            div.box-body
              button.form-control.bg-primary.btn.btn-primary#answerA
            div.box-body
              button.form-control.bg-primary.btn.btn-primary#answerB
            div.box-body
              button.form-control.bg-primary.btn.btn-primary#answerC
            div.box-body
              button.form-control.bg-primary.btn.btn-primary#answerD
            hr
            div.box-body#AreaNext
              button#id-btn-siguiente.btn.btn-lg.btn-default(disabled = 'disabled') Siguiente
        // Fin section
        section.col-md-5.connectedSortable
          // Chat box
          div.box.box-success
            div.box-header
              i.fa.fa-comments-o
              h3.box-title#chat-title #{session_nick}
              div.box-tools.pull-right(data-toggle='tooltip', title='Status')
                div.btn-group(data-toggle='btn-toggle')
            div.box-body.chat#chat-box
              // Chat item
              // div.item
              //   img.online(src='img/avatar.png', alt='user image')
              //   p.message
              //     a.name(href='#')
              //       small.text-muted.pull-right
              //         i.fa.fa-clock-o
              //         | 2:15
              //       | Mike Doe
              //     | I would like to meet you to discuss the latest news about the arrival of the new theme. They say it is going to be one the best themes on the market.
              // -- Chat item
            div.box-footer
              div.input-group
                input.form-control#sendmessage(placeholder = 'Escribe aquí...', name = 'Mensaje')
                div.input-group-btn
                  button.btn.btn-default Enviar
                    i.fa.fa-plus
          // Fin - Chat Box